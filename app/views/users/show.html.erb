<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3 id="microposts_count_show">
        Microposts (<%= @user.microposts.count %>)
      </h3>
      <div class="microposts-container">
      	<ol class="microposts">
        	<div id="test"><%= render @microposts %></div>
      	</ol>
      </div>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>